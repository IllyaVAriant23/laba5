#include <stdio.h>

int main() {
    int n;
    printf("Введіть розмір масиву: ");
    scanf("%d", &n);
    
    int a[n];
    
    printf("Введіть елементи масиву:\n");
    for (int i = 0; i < n; i++) {
        scanf("%d", &a[i]);
    }
    
    int max = a[0];
    for (int i = 1; i < n; i++) {
        if (a[i] > max) {
            max = a[i];
        }
    }
    
    int product = 1;
    int first_negative = -1;
    int last_negative = -1;
    
    for (int i = 0; i < n; i++) {
        if (a[i] < 0) {
            if (first_negative == -1) {
                first_negative = i;
            } else {
                last_negative = i;
                break;
            }
        }
    }
    
    if (first_negative != -1 && last_negative != -1) {
        for (int i = first_negative + 1; i < last_negative; i++) {
            product *= a[i];
        }
    }
    
    printf("Максимальний елемент масиву: %d\n", max);
    printf("Добуток елементів масиву, розташованих між першим і останнім від'ємними елементами: %d\n", product);
    
    return 0;
}

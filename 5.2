#include <stdio.h>

int main() {
    int n, x;
    printf("Введіть розмір масиву: ");
    if (scanf("%d", &n) != 1 || n <= 0) {
        printf("Некоректний розмір масиву. Програма завершується.\n");
        return 1;
    }
    
    int a[n];
    
    printf("Введіть ціле число x: ");
    if (scanf("%d", &x) != 1) {
        printf("Некоректне значення для x. Програма завершується.\n");
        return 1;
    }
    
    printf("Введіть елементи масиву:\n");
    for (int i = 0; i < n; i++) {
        if (scanf("%d", &a[i]) != 1) {
            printf("Некоректне значення елементу масиву. Програма завершується.\n");
            return 1;
        }
    }
    
    if (x > n) {
        printf("Значення x перевищує розмір масиву. Програма завершується.\n");
        return 1;
    }
    
    int sum = 0;
    for (int i = 0; i < x; i++) {
        sum += a[i] * a[i];
    }
    
    printf("Сума квадратів перших %d елементів масиву: %d\n", x, sum);
    
    return 0;
}
